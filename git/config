[user]
  name = David Lukes
  email = dafydd.lukes@gmail.com
[core]
  quotepath = off
[color]
  ui = auto
[push]
  default = simple
[pull]
  rebase = true
[rebase]
  autosquash = true
[credential]
  helper = cache
[help]
  autocorrect = 3

[alias]
  ll = log --pretty='%C(yellow)%h %C(blue)%ad %Cgreen%aN%C(auto)%d %Creset%s' --date=relative --date-order --graph

# Custom diff definitions. If necessary, the cache can be cleared
# manually with `git update-ref -d refs/notes/textconv/pandoc`.
[diff "pandoc"]
  textconv = pandoc --to=markdown
  cachetextconv = true
[diff "ipynb"]
  textconv = jupytext --to markdown -o -
  cachetextconv = true

# Merging
[diff]
  tool = vimdiff
[difftool "vimdiff"]
  path = nvim
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool "vimdiff"]
  path = nvim
