root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 100

[*.{py,rs}]
indent_size = 4

[*.go]
indent_style = tab

[Makefile]
indent_style = tab

[*.{md,Rmd,org,txt,rst,tex}]
max_line_length = 79

[COMMIT_EDITMSG]
max_line_length = 72
